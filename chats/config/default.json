{
    "server": {
        "host": "0.0.0.0",
        "port": 80,
        "fileUrl": "http://files.koor.io"
    },
    "db": {
        "uri": "mongodb://db:27017/chats"
    },
    "logs": {
        "level": "debug",
        "handleExceptions": false
    },
    "redis": {
        "host": "redis",
        "port": "6379",
        "password": null,
        "prefix": "koor.io"
    },
    "mailer": {
        "from": "no-reply@koor.io",
        "host": "smtp.mailgun.org",
        "secureConnection": true,
        "port": 465,
        "transportMethod": "SMTP",
        "auth": {
            "user": "mail.user@mail.com",
            "pass": "userpass"
        }
    },
    "hostnames": {
        "socials": [
            "build_socials_1"
        ],
        "websocket": [
            "build_websocket_1"
        ]
    },
    "services": {
        "users": {
            "getFollowingsByUserId": "/u/api/v1/followers/following/list/:userId/:page/:limit",
            "getUsersByIds": "/u/api/v1/users/getUsersByIds/:userIds"
        },
        "devices": {
            "getDeviceById": "/a/api/v1/devices/get/:deviceId"
        }
    },
    "unauthorization": [
        "/docs"
    ],
    "token_expire": 864000,
    "time_format": "YYYY-DD-MM H:mm:ss:SSS",
    "thumbnails": [
        [100, 100], 
        [200, 200], 
        [300, 300], 
        [400, 400],
        [600, 600]
    ]
}
