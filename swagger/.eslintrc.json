{
    "root": true,
    "extends": "eslint:recommended",
    "env": {
        "node": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "no-trailing-spaces": 2,
        "eol-last": 2,
        "quotes": ["error", "single"],
        "space-in-parens": ["error", "never"],
        "no-multiple-empty-lines": 1,
        "no-console": 0
    }
}
