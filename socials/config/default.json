{
    "server": {
        "host": "0.0.0.0",
        "port": 80,
        "fileUrl": "http://files.koor.io"
    },
    "db": {
        "uri": "mongodb://db:27017/socials"
    },
    "logs": {
        "level": "debug",
        "handleExceptions": false
    },
    "redis": {
        "host": "redis",
        "port": "6379",
        "password": null,
        "prefix": "koor.io"
    },
