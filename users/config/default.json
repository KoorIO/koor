{
    "server": {
        "host": "0.0.0.0",
        "port": 3000
    },
    "client": {
        "url": "https://koor.io/app"
    },
    "db": {
        "uri": "mongodb://db:27017/users"
    },
    "logs": {
        "level": "debug",
        "handleExceptions": false
    },
    "redis": {
        "host": "redis",
        "port": "6379",
        "password": null,
        "prefix": "koor.io"
    },
    "github": {
        "client_secret": "xxxxxxxxx"
    },
    "mailer": {
        "from": "no-reply@koor.io",
        "host": "smtp.mailgun.org",
        "secureConnection": true,
        "port": 465,
        "transportMethod": "SMTP",
        "auth": {
            "user": "mail.user@mail.com",
            "pass": "userpass"
        }
    },
    "unauthorization": [
        "/api/v1/users/login", 
        "/api/v1/users/forgotpassword", 
        "/api/v1/users/resetpassword", 
        "/api/v1/users/create",
        "/api/v1/users/activate",
        "/api/v1/users/github",
        "/api/v1/config/get"
    ],
    "token_expire": 86400,
    "time_format": "YYYY-DD-MM H:mm:ss:SSS"
}
