{
    "root": true,
    "extends": "eslint:recommended",
    "plugins": ["jasmine"],
    "env": {
        "node": true,
        "jasmine": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": ["warn", 4],
        "camelcase": ["warn",  {"properties": "always"}],
        "linebreak-style": ["error", "unix"],
        "no-trailing-spaces": 2,
        "eol-last": 2,
        "quotes": ["error", "single"],
        "space-in-parens": ["error", "never"],
        "no-multiple-empty-lines": 1
    }
}
